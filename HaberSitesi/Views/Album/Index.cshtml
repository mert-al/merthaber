@using DataAccess
@using HaberSitesi.Services
@model HaberSitesi.Models.HomePageDto<Album>
@{
    ViewBag.Route = "/galeri";
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/Layouts/_albumLayout.cshtml";
    ViewBag.Item = "Turkuvaz Haber - Galeri , En Son Haberler";
}





<main>
    @{

        List<Album> albums = Model.Items;
        List<Album> topHit = Model.TopHit;
    }
    <!-- Trending Area Start -->
    <div class="trending-area fix ">
        <div class="container">
            <div class="trending-main">
                <!-- Trending Tittle -->

                <section class="row">

                    <!-- Trending Top -->
                    @{

                        <div class="col-lg-8">

                            <div class="trending-top mb-30">
                                <div class="trend-top-img">
                                    <a href="galeri/@albums[0].Categories.FirstOrDefault().url/@albums[0].url">

                                        <img src="@ViewBag.apiUrl/@albums[0].MainSliderIMG" alt="">
                                    </a>
                                    <div class="trend-top-cap">
                                        <span>@albums[0].Categories.FirstOrDefault().Name</span>
                                        <h2>
                                            <a href="~/galeri/@albums[0].Categories.FirstOrDefault().url/@albums[0].url">@albums[0].Title</a>
                                        </h2>
                                    </div>
                                </div>
                            </div>


                            <hidden hidden>@albums.Remove(albums[0])</hidden>
                            <div id="HaberListesi">
                                <div class="trending-bottom">
                                    <div class="row">

                                        @foreach (Album item in albums.GetRange(0, 12))
                                        {
                                            <div class="col-lg-4">
                                                <div class="single-bottom mb-35">
                                                    <div class="trend-bottom-img mb-30">
                                                        <a href="~/galeri/@item.Categories.FirstOrDefault().url/@item.url">
                                                            <img src="@ViewBag.apiUrl/@item.SliderBottomIMG" alt="">
                                                        </a>
                                                    </div>
                                                    <div class="trend-bottom-cap">

                                                        <h4>
                                                            <a style="overflow:hidden; -webkit-box-orient: vertical;  -webkit-line-clamp: 2; display: -webkit-box; "
                                                               href="~/galeri/@item.Categories.FirstOrDefault().url/@item.url">@item.Title</a>
                                                        </h4>
                                                    </div>
                                                </div>
                                            </div>
                                        }
                                    </div>
                                </div>
                            </div>
                        </div>
                        <hidden hidden>
                            @{
                                albums.RemoveRange(0, 12);
                            }
                        </hidden>

                        <section class="col-lg-4">

                            @foreach (Album item in topHit)
                            {
                                <div class="trand-right-single d-flex">
                                    <div class="trand-right-img">
                                        <a href="~/galeri/@item.Categories.FirstOrDefault().url/@item.url">
                                            <img style="max-width:120px" src="@ViewBag.apiUrl/@item.SidebarIMG" alt="">
                                        </a>
                                    </div>
                                    <div class="trand-right-cap">

                                        <h4 style="font-size:15px">
                                            <a href="~/galeri/@item.Categories.FirstOrDefault().url/@item.url">@item.Title</a>
                                        </h4>
                                    </div>
                                </div>

                            }

                            <section class="whats-news-area pt-20 pb-20">
                                <div class="container">
                                    <div class="row">

                                        @Html.Partial("~/Views/Shared/Component/Borsa.cshtml")
                                        <!-- New Poster -->
                                        <div class="news-poster d-none d-lg-block">
                                            <img src="~/Content/assets/img/news/news_card.jpg" alt="">
                                        </div>


                                    </div>
                                </div>
                            </section>

                        </section>


                    }

            </div>
        </div>
    </div>
    <!-- Trending Area End -->
